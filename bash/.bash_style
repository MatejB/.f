RUNNING='local'

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color) color_prompt=yes;;
esac

# uncomment for a colored prompt, if the terminal has the capability; turned
# off by default to not distract the user: the focus in a terminal window
# should be on the output of commands, not on the prompt
force_color_prompt=yes

if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
	      # We have color support; assume it's compliant with Ecma-48
	      # (ISO/IEC-6429). (Lack of such support is extremely rare, and such
	      # a case would tend to support setf rather than setaf.)
	      color_prompt=yes
    else
	      color_prompt=
    fi
fi

# colors
# 0 – Black
# 1 – Red
# 2 – Green
# 3 – Yellow
# 4 – Blue
# 5 – Magenta
# 6 – Cyan	
# 7 – White

RST=$(tput sgr0)
Red=$(tput setaf 1)
Green=$(tput setaf 2)
Yellow=$(tput setaf 3)
Blue=$(tput setaf 4)
Magenta=$(tput setaf 5)
Cyan=$(tput setaf 6)
White=$(tput setaf 7)

# custom color scheme for prompt
if [ "$color_prompt" = yes -a $RUNNING == 'local' ]; then
    PS1='\[$Yellow\]\u\[$Green\]@\[$White\]\h\[$Green\]:\[$Yellow\]\W/\[$Magenta\]$(__git_ps1 " [%s] ")\[$Green\]\$\[$RST\] '
fi
if [ "$color_prompt" = yes -a $RUNNING == 'remote' ]; then
    PS1='\[$Yellow\]\u\[$Green\]@\[$Red\]\h\[$Green\]:\[$Yellow\]\W/\[$Magenta\]$(__git_ps1 " [%s] ")\[$Green\]\$\[$RST\] '
fi


# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h \a\]$PS1"
    ;;
*)
    ;;
esac

# aliases

alias ll='ls -lha'

alias cd='cd -P'

alias mkdir='mkdir -pv'

if [ $UID -ne 0 ]; then
   alias apt-get='sudo apt-get'
   alias reboot='sudo reboot'
   alias poweroff='sudo /sbin/poweroff'
fi

alias ..='cd ..'
alias .2='cd ../../'
alias .3='cd ../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../../'

alias c='clear'

# alias dc='svn diff | colordiff'

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
[ -f ~/.f/bash/.fzf_extra ] && source ~/.f/bash/.fzf_extra

export ALTERNATE_EDITOR=""
export EDITOR="emacsclient -t"                  # $EDITOR should open in terminal
export VISUAL="emacsclient -c -a emacs"         # $VISUAL opens in GUI with non-daemon as alternate
